{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@assets": ["src/assets"],
            "@components/*": ["src/components/*"],
            "@components": ["src/components"],
            "@hooks/*": ["src/hooks/*"],
            "@hooks": ["src/hooks"],
            "@images": ["src/assets/images"],
            "@pages/*": ["src/pages/*"],
            "@pages": ["src/pages"],
            "@slices/*": ["src/services/slices/*"],
            "@slices": ["src/services/slices"],
            "@store": ["src/services/store"],
            "@ui/*": ["src/components/ui/*"],
            "@ui": ["src/components/ui"],
            "@utils/*": ["src/utils/*"],
            "@utils": ["src/utils"],
        }
    },
    "outDir": "./dist/",
    "include": ["src/**/*"]
}
